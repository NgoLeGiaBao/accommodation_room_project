@model App.Models.ServicesModel.ServicesBlog
@{
    ViewData["Title"] = "Create Services News";
}
<div class="container-fluid">
    <partial name="_SuccessMessage" />
    <partial name="_FailureMessage" />
    <div class="row">
        <div class="col-md-12">
            @* <form asp-action="CreateServiceNews" id="step-form-horizontal" class="step-form-horizontal"> *@
            <form asp-action="CreateServiceNews" method="POST" enctype="multipart/form-data" id="step-form-horizontal" class="step-form-horizontal">
                <div>
                    <h4>General Information</h4>
                    <section>
                        <h3>General Information</h3>
                        <div class="row">
                            @* Title *@
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label for="control-label">Title</label>
                                    @Html.EditorFor(m => m.Title, new
                                    {
                                        htmlAttributes = new { @class = "form-control", @placeholder = "For example: Hostel at 83-85, District 7" }
                                    })
                                    @* @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" }) *@
                                </div>
                            </div>
                            @* self-managed *@
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="control-label">Self-managed accommodation</label>
                                        @Html.DropDownListFor(
                                            m => m.SelfManagedAccommodation, 
                                            new SelectList(new[] { "Yes", "No" }, "Choose object"), 
                                            "Choose object", 
                                            new { @class = "form-control" }
                                        )
                                </div>
                            </div>
                            @* Area *@
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="control-label">Area</label>
                                        @Html.TextBoxFor(m => m.Area, new { @class = "form-control", @placeholder = "Area", type = "number" })
                                </div>
                            </div>
                            @* Rental price *@
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label for="control-label">Rental price</label>
                                    @Html.TextBoxFor(m => m.RentalPrice, new { @class = "form-control", @placeholder = "Rental price",type = "number" })
                                </div>
                            </div>
                            @* Summernote *@
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label for="control-label">Description of the content</label>
                                    <div class="summernote" id="first-summernote"></div>
                                    <!-- Input hidden for Summernote 1 -->
                                    <input type="hidden" name="ContentDescription" id="ContentDescription" value="@Model.ContentDescription" />
                                </div>
                            </div>
                            @* Đối tượng *@
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <hr />
                                    <h3>Object</h3>
                                    <div class="row justify-content-start" >
                                        <div class="col-3 mb-3">
                                            <div class="form-check form-check-inline">
                                                <label class="form-check-label">
                                                    @Html.CheckBoxFor(m => m.IsStudent, new { @class = "form-check-input" })
                                                    Student
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col-3 mb-3">
                                            <div class="form-check form-check-inline">
                                                <label class="form-check-label">
                                                    @Html.CheckBoxFor(m => m.IsWorker, new { @class = "form-check-input" })
                                                    Worker
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col-3 mb-3">
                                            <div class="form-check form-check-inline">
                                                <label class="form-check-label">
                                                    @Html.CheckBoxFor(m => m.IsFamily, new { @class = "form-check-input" })
