                                            <label for="control-label">Zalo Number</label>
                                            @Html.EditorFor(m => m.ZaloNumber, new
                                            {
                                                htmlAttributes = new { @class = "form-control", @placeholder = "+8412345678" }
                                            })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    <h4>Add Room</h4>
                    <section>
                        <h3>Room Information</h3>
