    <script>
        // Handle drag-and-drop and file input functionality for both Room and Area 1
        const dropArea_room = document.getElementById("dropArea_room");
        const fileInput_room = document.getElementById("fileInput_room");
        const previewArea_room = document.getElementById("previewArea_room");

        const dropArea = document.getElementById("dropArea");
        const fileInput = document.getElementById("fileInput");
        const previewArea = document.getElementById("previewArea");

        // Event listeners for Room
        setupDropArea(dropArea_room, fileInput_room, previewArea_room, 15);
        // Event listeners for Area 1
        setupDropArea(dropArea, fileInput, previewArea, 15);

        // Function to setup drag-and-drop and file input for each area
        function setupDropArea(dropAreaElement, fileInputElement, previewAreaElement, maxFiles) {
            dropAreaElement.addEventListener("click", () => {
                fileInputElement.click(); // Open file dialog on click
            });

            dropAreaElement.addEventListener("dragover", (e) => {
                e.preventDefault();
                dropAreaElement.style.borderColor = "#007acc";
                dropAreaElement.style.backgroundColor = "#e6f7ff";
            });

            dropAreaElement.addEventListener("dragleave", () => {
                dropAreaElement.style.borderColor = "#0099ff";
                dropAreaElement.style.backgroundColor = "#ffffff";
            });

            dropAreaElement.addEventListener("drop", (e) => {
                e.preventDefault();
                dropAreaElement.style.borderColor = "#0099ff";
                dropAreaElement.style.backgroundColor = "#ffffff";
                const files = e.dataTransfer.files;
                handleFiles(files, previewAreaElement, maxFiles);
            });

            fileInputElement.addEventListener("change", (e) => {
                const files = e.target.files;
                handleFiles(files, previewAreaElement, maxFiles);
            });
        }

        // Function to handle file preview and validation
        function handleFiles(files, previewAreaElement, maxFiles) {
            const currentItems = previewAreaElement.querySelectorAll('.preview-item').length;
            if (files.length + currentItems > maxFiles) {
                return;
            }
            Array.from(files).forEach((file) => {
                const reader = new FileReader();
                reader.onload = (e) => {
                    const previewItem = document.createElement("div");
                    previewItem.classList.add("preview-item");

                    const img = document.createElement("img");
                    img.src = e.target.result;

                    const checkIcon = document.createElement("div");
                    checkIcon.classList.add("check-icon");
                    checkIcon.textContent = "✔";

                    const deleteBtn = document.createElement("div");
                    deleteBtn.classList.add("delete-btn");
                    deleteBtn.textContent = "×";

                    // Add delete functionality
                    deleteBtn.addEventListener("click", () => {
                        previewItem.remove();
                    });

                    previewItem.appendChild(img);
                    previewItem.appendChild(checkIcon);
                    previewItem.appendChild(deleteBtn);

                    previewAreaElement.appendChild(previewItem);
                };
                reader.readAsDataURL(file);
            });
        }
    </script>
