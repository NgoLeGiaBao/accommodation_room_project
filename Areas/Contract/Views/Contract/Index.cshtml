@{
    var hasRentalProperty = ViewBag.HasRentalProperties;
}
@if (hasRentalProperty)
{
    <div class="container-fluid">
        <div class="col-12 mb-30">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card text-center">
                        <div class="card-body card-modifed">
                            <div class="d-flex justify-content-between align-items-center flex-wrap">
                                <div class="status-info mb-2">
                                    <select id="room-status" class="form-select input-height"
                                        aria-label="Chọn trạng thái phòng">
                                        <option value="all">All Contract</option>
                                        <option value="pending">Pending </option>
                                        <option value="active">Active </option>
                                        <option value="completed">Completed </option>
                                    </select>
                                    <!-- Room Number Field -->
                                    <input class="input-height input-room" type="text" id="room-number"
                                        placeholder="Enter contract name" aria-label="Nhập số phòng">
                                    <!-- Search Button -->
                                    <a href="#" class="btn btn-primary btn-custom me-2">
                                        <i class="fas fa-search"></i>
                                        Search
                                    </a>
                                </div>
                                <div class="action-buttons mb-2">
                                    @* <a asp-controller="Room" asp-action="CreateHome" class="btn btn-primary me-2">
                                <i class="fas fa-plus"></i>
                                Add home
                                </a> *@
                                    @* <a href="#" class="btn btn-info me-2">
                                <i class="fas fa-edit"></i>
                                Enter room from excel
                                </a> *@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 mb-30">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card ">
                        <div class="card-header">
                            <ul class="nav nav-tabs card-header-tabs" id="tab-list">
                                @* Generate code *@
                            </ul>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center flex-wrap mb-3">
                                <div class="status-info mb-2" id="status-info">
                                    @* Generate code *@
                                </div>
                                <div class="action-buttons mb-2" id="btn-action">
                                    @* Generate code *@

                                </div>
                            </div>
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered zero-configuration text-center"
                                    id="contract-list">
                                    <thead>
                                        <tr>
                                            <th>No.</th>
                                            <th>Tenant Name</th>
                                            <th>Room Number</th>
                                            <th>Starting Date</th>
                                            <th>Expiration Date</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @* Generate code *@
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <hr />
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="col-12 mb-30">
        <div class="row">
            <div class="col-lg-12">
                <div class="card text-center">
                    <div class="card-body card-modifed">
                        @* <div class="d-flex justify-content-end align-items-center flex-wrap">
                    <div class="action-buttons mb-2">
                    <a asp-controller="Room" asp-action="CreateHome" class="btn btn-primary me-2">
                    <i class="fas fa-plus"></i>
                    Add home
                    </a>
                    </div>
                    </div> *@
                    </div>
                    @* Process no availble data *@
                </div>
            </div>
        </div>
    </div>
}

@* Link CSS*@
@section AdditionalLinkCSS {
    <link href="../css/site.css" rel="stylesheet">
    <link href="../plugins/tables/css/datatable/dataTables.bootstrap4.min.css" rel="stylesheet">
    <style>
        #contract-list_wrapper {
            padding: 0px !important;
        }

        /* Show the first row if it exists */
        div.table-responsive>div.dataTables_wrapper>div.row:first-child {
            display: none !important;
        }
    </style>
}

@* Link Javascript*@
@section AdditionalLinkJavascript {
    <script src="../js/contract/contract.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="../plugins/tables/js/jquery.dataTables.min.js"></script>
    <script src="../plugins/tables/js/datatable/dataTables.bootstrap4.min.js"></script>
    <script src="../plugins/tables/js/datatable-init/datatable-basic.min.js"></script>
}