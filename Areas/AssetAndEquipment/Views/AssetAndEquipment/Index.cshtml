<div class="container-fluid">
    <div class="col-12 mb-30">
        <div class="row">
            <div class="col-lg-12">
                <div class="card text-center">
                    <div class="card-body card-modifed">
                        <div class="d-flex justify-content-between align-items-center flex-wrap">
                            <div class="status-info mb-2">
                                <select id="room-status" class="form-select input-height"
                                    aria-label="Chọn trạng thái phòng">
                                    <option value="all">Room status</option>
                                    <option value="available">Available </option>
                                    <option value="abouttoexpire">About to expire</option>
                                    <option value="rented">Rented</option>
                                </select>
                                <!-- Room Number Field -->
                                <input class="input-height input-room" type="text" id="room-number"
                                    placeholder="Enter number room" aria-label="Nhập số phòng">
                                <!-- Search Button -->
                                <a href="#" class="btn btn-primary btn-custom me-2">
                                    <i class="fas fa-search"></i>
                                    Search
                                </a>
                            </div>
                            <div class="action-buttons mb-2">
                                <a asp-controller="Room" asp-action="CreateHome" class="btn btn-primary me-2">
                                    <i class="fas fa-plus"></i>
                                    Add home
                                </a>
                                @* <a href="#" class="btn btn-info me-2">
                                <i class="fas fa-edit"></i>
                                Enter room from excel
                                </a> *@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 mb-30">
        <div class="row">
            <div class="col-lg-12">
                <div class="card ">
                    <div class="card-header">
                        <ul class="nav nav-tabs card-header-tabs" id="tab-list">

                            @* <li class="nav-item">
                            <a class="nav-link active" href="#">83 - Lê Văn Lương</a>
                            </li>
                            <li class="nav-item">
                            <a class="nav-link" href="#">87 - Hoàng Diệu</a>
                            </li>
                            <li class="nav-item">
                            <a class="nav-link" href="#">139 - Trường Trinh</a>
                            </li>
                            <li class="nav-item">
                            <a class="nav-link" href="#">231 - Nguyễn Thị Thập</a>
                            </li> *@
                        </ul>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center flex-wrap mb-3">
                            <div class="status-info mb-2" id="status-info">
                                @* <span>Available 4</span> | <span>About to expire 2</span> | <span>Rented 7</span> *@
                            </div>
                            <div class="action-buttons mb-2" id="btn-action">
                                @* <a asp-controller="Room" asp-action="CreateRoom" class="btn btn-primary me-2 ">
                                <i class="fas fa-plus"></i> Add Tenant
                                </a>
                                <a asp-controller="Room" asp-action="EditHome" class="btn btn-info me-2 ">
                                <i class="fas fa-edit"></i> Export list
                                </a> *@
                            </div>
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered zero-configuration text-center"
                                    id="assest-equipment-list">
                                    <thead>
                                        <tr>
                                            <th>Asset ID</th>
                                            <th>Asset Name</th>
                                            <th>Category</th>
                                            <th>Purchase Date</th>
                                            <th>Cost (VND)</th>
                                            <th>Condition</th>
                                            <th>Location</th>
                                            <th>Next Maintenance Due Date</th> <!-- Cột ngày bảo trì tiếp theo -->
                                            <th>Days Until Due</th> <!-- Cột số ngày còn lại đến hạn bảo trì -->
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>A001</td>
                                            <td>Computer</td>
                                            <td>Electronics</td>
                                            <td>01/01/2020</td>
                                            <td>20,000,000</td>
                                            <td>Good</td>
                                            <td>Office 1</td>
                                            <td>01/12/2024</td> <!-- Ngày bảo trì tiếp theo -->
                                            <td>61</td> <!-- Số ngày còn lại đến hạn bảo trì -->
                                            <td>
                                                <span>
                                                    <a asp-controller="Asset" asp-action="EditAsset" asp-route-id="1"
                                                        data-toggle="tooltip" data-placement="top" title="Edit">
                                                        <i class="fa fa-pencil color-muted m-r-5"></i>
                                                    </a>
                                                    <a href="#basicModal" data-toggle="modal" title="Remove">
                                                        <i class="fa fa-close color-danger"></i>
                                                    </a>
                                                </span>
                                            </td>
                                        </tr>
                                        <!-- Add more rows as needed -->
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="basicModal">
    <div class="modal-dialog" role="documen t">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Modal body text goes here.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

