<!-- #/ container -->
<div class="container-fluid">
    <div class="col-12 mb-30">
        <div class="row">
            <div class="col-lg-12">
                <div class="card text-center">
                    <div class="card-body card-modifed">
                        <div class="d-flex justify-content-between align-items-center flex-wrap">
                            <div class="status-info mb-2">
                                <select id="room-status" class="form-select input-height"
                                    aria-label="Chọn trạng thái phòng">
                                    <option value="all">Room status</option>
                                    <option value="available">Available </option>
                                    <option value="abouttoexpire">About to expire</option>
                                    <option value="rented">Rented</option>
                                </select>
                                <!-- Room Number Field -->
                                <input class="input-height input-room" type="text" id="room-number"
                                    placeholder="Enter number room" aria-label="Nhập số phòng">
                                <!-- Search Button -->
                                <a href="#" class="btn btn-primary btn-custom me-2">
                                    <i class="fas fa-search"></i>
                                    Search
                                </a>
                            </div>
                            <div class="action-buttons mb-2">
                                <a asp-controller="Room" asp-action="CreateHome" class="btn btn-primary me-2">
                                    <i class="fas fa-plus"></i>
                                    Add home
                                </a>
                                @* <a href="#" class="btn btn-info me-2">
                                <i class="fas fa-edit"></i>
                                Enter room from excel
                                </a> *@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 mb-30">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <ul class="nav nav-tabs card-header-tabs">
                            <li class="nav-item">
                                <a class="nav-link active" href="#">83 - Lê Văn Lương</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">87 - Hoàng Diệu</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">139 - Trường Trinh</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">231 - Nguyễn Thị Thập</a>
                            </li>
                        </ul>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center flex-wrap mb-3">
                            <div class="status-info mb-2">
                                <span>Available 4</span> | <span>About to expire 2</span> | <span>Rented 7</span>
                            </div>
                            <div class="action-buttons mb-2">
                                <a asp-controller="Room" asp-action="CreateRoom" class="btn btn-primary me-2 ">
                                    <i class="fas fa-plus"></i> Add room
                                </a>
                                <a asp-controller="Room" asp-action="EditHome" class="btn btn-info me-2 ">
                                    <i class="fas fa-edit"></i> Update home
                                </a>
                                @* <a href="#" class="btn btn-danger ">
                                <i class="fas fa-trash"></i> Delete home
                                </a> *@
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <!-- Cards are responsive now -->
                            <div class="col-lg-3 col-md-6 mb-4">
                                <div class="card text-center">
                                    <div class="card-body">
                                        <h5 class="card-title">P-001</h5>
                                        <p class="card-text ">
                                            Room Price: 4000
                                            </br>
                                            Room Status: <span class="badge badge-primary px-2">Sale</span>
                                        </p>
                                        <div class="d-flex justify-content-center">
                                            <a asp-controller="Room" asp-action="EditRoom"
                                                class="btn btn-primary ">Edit</a>
                                            <a asp-controller="Room" asp-action="ViewRoom"
                                                class="btn btn-secondary margin-room-update">View</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <partial name="_Paging"></partial>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@* Link CSS*@
@section AdditionalLinkCSS {
    <link href="css/site.css" rel="stylesheet">
}

@* Link Javascript*@
@section AdditionalLinkJavascript {
    <script src="~/js/room/room.js"></script>
    @* <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script> *@
}
