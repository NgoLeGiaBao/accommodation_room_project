@model App.Models.Room
<div class="container-fluid">
    <div class="col-lg-12">
        <div class="card shadow-lg border-light mb-4">
            <div class="card-body">
                <h4 class="card-title text-center font-weight-bold">Room Information</h4>
                <div class="row">
                    <div class="col-md-4 ">
                        <p><strong>Number room: </strong>@Model.RoomName</p>
                    </div>
                    <div class="col-md-4 ">
                        <p><strong>Area: </strong>@Model.Area m2</p>
                    </div>
                    <div class="col-md-4 ">
                        <p><strong>Maximum Occupancy:</strong> @Model.MaximumNumberOfPeople</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 ">
                        <p><strong>Time Contract:</strong></p>
                    </div>
                    <div class="col-md-4 ">
                        <p><strong>Room Price: </strong>@Model.Price</p>
                    </div>
                    <div class="col-md-4 ">
                        <p><strong>Room Stauts: </strong>@Model.Status</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 ">
                        <p class="text-justify"><strong>Description:</strong> @Model.Description</p>
                    </div>
                </div>

                @if (Model.Status == "About to expire")
