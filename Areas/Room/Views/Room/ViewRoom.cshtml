                    @* Process herer *@
                    <!-- Send Contract Activation Notice Button -->
                    <div class="text-center mb-4 mt-4">
                        <button type="button" class="btn btn-primary" onclick="alert('Thông báo hợp đồng đã được gửi!')">
                            Send Contract Activation Notice</button>
                    </div>
                }
                @if (Model.Status == "Available")
