@model App.Models.Room
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="text-center lh-base mb-4">Add A New Room</h2>
                    <partial name="_SuccessMessage" />
                    <partial name="_FailureMessage" />
                    <div class="basic-form">
                        <form asp-action="CreateRoom" method="POST" enctype="multipart/form-data">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-row">
                                <!-- Room Name -->
                                <div class="form-group col-md-6">
                                    @Html.LabelFor(m => m.RoomName, new { @class = "control-label" })
                                    @Html.EditorFor(m => m.RoomName, new
                                        {
                                            htmlAttributes = new { @class = "form-control" }
                                        })
                                    @Html.ValidationMessageFor(m => m.RoomName, "", new { @class = "text-danger" })
                                </div>

                                <!-- Area -->
                                <div class="form-group col-md-6">
                                    @Html.LabelFor(m => m.Area, new { @class = "control-label" })
                                    @Html.EditorFor(m => m.Area, new
                                        {
                                            htmlAttributes = new
                                            {
                                                @class = "form-control",
                                                type = "number"
                                            }
                                        })
                                    @Html.ValidationMessageFor(m => m.Area, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-row">
                                <!-- Maximum Number of People -->
                                <div class="form-group col-md-6">
                                    @Html.LabelFor(m => m.MaximumNumberOfPeople, new { @class = "control-label" })
                                    @Html.EditorFor(m => m.MaximumNumberOfPeople, new
                                        {
                                            htmlAttributes = new
                                            {
                                                @class = "form-control",
                                                type = "number"
                                            }
                                        })
                                    @Html.ValidationMessageFor(m => m.MaximumNumberOfPeople, "", new
                                        {
                                            @class =
                                             "text-danger"
                                        })
                                </div>

                                <!-- Price -->
                                <div class="form-group col-md-6">
                                    @Html.LabelFor(m => m.Price, new { @class = "control-label" })
                                    @Html.EditorFor(m => m.Price, new
                                        {
                                            htmlAttributes = new
                                            {
                                                @class = "form-control",
                                                type = "number"
                                            }
                                        })
                                    @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <!-- Description -->
                            <div class="form-group">
                                @Html.LabelFor(m => m.Description, new { @class = "control-label" })
                                @Html.TextAreaFor(m => m.Description, new
                                    {
                                        @class = "form-control",
                                        rows = 6,
                                        placeholder = "Enter room description..."
                                    })
                                @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                            </div>

                            <div class="container mt-6">
                                <div class="text-center">
                                    <div class="row">
                                        <!-- Nút Back to Home -->
                                        <div class="col-12 col-md-6 mb-3">
                                            <a asp-action="Index" class="btn btn-light btn-lg w-100">
                                                Back to Home
                                            </a>
                                        </div>
                                        <!-- Nút Create Room -->
                                        <div class="col-12 col-md-6 mb-3">
                                            <button type="submit" class="btn btn-dark btn-lg w-100">
                                                Create New Room
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section AdditionalLinkCSS {
    <style>
        .text-danger {
            display: inline-block;
            margin-left: 10px;
            vertical-align: middle;
        }
    </style>
}
@section AdditionalLinkJavascript {
    <partial name="_ValidationScriptsPartial" />
}
